<resources>
    <!-- Tema base -->
    <style name="Theme.ControlPorcinoCHL" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/text_white</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/text_white</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Componentes -->
        <item name="materialButtonStyle">@style/ButtonStyle</item>
        <item name="editTextStyle">@style/EditTextStyle</item>
        <item name="materialAlertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <!-- Estilo para AlertDialog/DatePicker -->
    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSurface">@color/surface</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
    </style>

    <!-- Estilo para botones -->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/text_white</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingVertical">12dp</item>
    </style>

    <!-- Estilo para campos de texto -->
    <style name="EditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Estilos para el calendario -->
    <style name="CalendarioHeaderText">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CalendarioWeekDayText">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CalendarioDateText">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SearchViewStyle">
        <item name="android:textColorHint">@color/text_primary</item> <!-- Texto negro -->
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Agrega esto dentro del tag <resources> -->
    <style name="DatePickerTheme" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/text_white</item>
        <item name="colorSurface">@color/surface</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:windowBackground">@color/background</item>
    </style>
</resources>