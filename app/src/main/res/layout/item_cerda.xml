<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/item_cerda_background"
    android:layout_margin="8dp">

    <!-- ID de la Cerda -->
    <TextView
        android:id="@+id/txtIdCerda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_primary"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="ID: CERDA-001"/>

    <!-- Fecha de Pre침ez -->
    <TextView
        android:id="@+id/txtFechaPrenez"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        tools:text="Pre침ez: 15/10/2023"/>

    <!-- Pr칩ximo Evento -->
    <TextView
        android:id="@+id/txtProximoEvento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="4dp"
        android:background="@drawable/chip_background"
        android:textColor="@color/chip_background"
        android:textSize="12sp"
        android:textStyle="bold"
        tools:text="Pr칩ximo: Parto"/>

    <!-- Fechas de Eventos (Opcional) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtFechaCelo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="@color/celo_color"
            tools:text="Celo: 05/11/2023"/>

        <TextView
            android:id="@+id/txtFechaParto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="@color/parto_color"
            tools:text="Parto: 26/02/2024"/>
    </LinearLayout>
</LinearLayout>